<h1> Sign Up: </h1>

<%= form_for @user, users_path do |f| %>
  <%= f.label :name, "Name: " %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :password, "Password: " %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation, "Password Confirmation: " %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Sign Up" %>
<% end %>